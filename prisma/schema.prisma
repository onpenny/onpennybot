model Reminder {
  id          String   @id @default(cuid())
  userId      String
  type        String   // "ASSET_UPDATE", "INSURANCE_EXPIRED", "ID_CARD_EXPIRED", "BIRTHDAY"
  title       String
  message     String
  assetId     String?  // Link to asset
  memberId    String?  // Link to family member
  remindAt    DateTime @default(now())
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([userId, type])
}

model ReminderPreferences {
  id              String   @id @default(cuid())
  userId          String   @unique
  assetUpdateDays Int      @default(90)  // days before reminder
  insuranceExpiryDays Int    @default(30) // days before reminder
  idCardExpiryDays Int       @default(60) // days before reminder
  birthdayReminderDays Int    @default(7)  // days before birthday
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
}
